<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControllerActivity"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

    <Button
        android:id="@+id/BTN_GO_AHEAD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="前进"
        android:background="@drawable/button">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="后退"
        android:id="@+id/BTN_GO_BACK"
        android:background="@drawable/button">

    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止"
        android:id="@+id/BTN_STOP"
        android:background="@drawable/button">

    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="向左"
        android:id="@+id/BTN_TURN_LEFT"
        android:background="@drawable/button">

    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="向右"
        android:id="@+id/BTN_TURN_RIGHT"
        android:background="@drawable/button">

    </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="左后转"
            android:id="@+id/BTN_TURN_LEFT_BACK"
            android:background="@drawable/button">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="右后转"
            android:id="@+id/BTN_TURN_RIGHT_BACK"
            android:background="@drawable/button">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="左前转"
            android:id="@+id/BTN_TURN_LEFT_FORWARD"
            android:background="@drawable/button">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="右前转"
            android:id="@+id/BTN_TURN_RIGHT_FORWARD"
            android:background="@drawable/button">

        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="右旋转"
            android:id="@+id/BTN_RIGHT_ROTATION"
            android:background="@drawable/button">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="左旋转"
            android:id="@+id/BTN_LEFT_ROTATION"
            android:background="@drawable/button">

        </Button>
    </LinearLayout>
</LinearLayout>